@model OnlineStore.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryDetails" class="control-label"></label>
                <input asp-for="CategoryDetails" class="form-control" />
                <span asp-validation-for="CategoryDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryImage" class="control-label"></label>
               
                <input type="hidden" name="CategoryImage" value="@Model.CategoryImage"/>
                <img src="/DataFiles/@Model.CategoryImage" style="width:150px" />
                <input type="file" name="pic" />
                
                <span asp-validation-for="CategoryImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

