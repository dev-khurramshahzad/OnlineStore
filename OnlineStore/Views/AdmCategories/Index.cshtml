@model IEnumerable<OnlineStore.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Categories List
<a asp-action="Create" style="float:right" class="btn btn-primary">Create New</a>
</h1>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDetails)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    <img src="/DataFiles/@item.CategoryImage" style="width:90px"/>
                </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDetails)
            </td>
            
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                    <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
