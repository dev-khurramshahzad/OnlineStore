@model IEnumerable<OnlineStore.Models.Brand>


<div class="page-top-info">
    <div class="container">
        <h4>Brands Page</h4>
        <div class="site-pagination">
            <a href="/Home">Home</a> 
        </div>
    </div>
</div>


<section class="category-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12  order-1 order-lg-2 mb-5 mb-lg-0">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-sm-6">
                            <div class="product-item" style="margin:12px;padding:18px;border:2px solid blue">
                                <div class="pi-pic">
                                    <div class="tag-sale">ON SALE</div>
                                    <a href="/Home/Products?brand=@item.BrandId">
                                        <img height="200" src="/DataFiles/@item.BrandImage" alt="@item.BrandName">
                                    </a>


                                </div>
                                <div class="">
                                    <a href="/Home/Products?brand=@item.BrandId">
                                        <h4>@item.BrandName</h4>
                                    </a>

                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>