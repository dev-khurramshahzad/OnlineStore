@model IEnumerable<OnlineStore.Models.Category>


<div class="page-top-info">
    <div class="container">
        <h4>Category Page</h4>
        <div class="site-pagination">
            <a href="/Home">Home</a> 
        </div>
    </div>
</div>


<section class="category-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12  order-1 order-lg-2 mb-5 mb-lg-0">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-sm-6">
                            <div class="product-item" style="margin:12px;padding:18px;border:2px solid blue">
                                <div class="pi-pic">
                                    <div class="tag-sale">ON SALE</div>
                                    <a href="/Home/Products/@item.CategoryId">
                                        <img src="/DataFiles/@item.CategoryImage" alt="@item.CategoryName">
                                    </a>


                                </div>
                                <div class="">
                                    <a href="/Home/Products/@item.CategoryId">
                                        <h4>@item.CategoryName</h4>
                                    </a>

                                    <h5>@item.CategoryDetails</h5>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>